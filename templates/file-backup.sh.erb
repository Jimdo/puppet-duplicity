#!/bin/bash
set -e
set -o pipefail

<% if @default_exit_code %>
# coerce exit code in order to allow nagios plugin like behavior
trap "exit <%= default_exit_code %>" ERR INT QUIT ABRT PIPE TERM XCPU XFSZ
trap "" HUP WINCH
<% end %>

<% @_environment.each do |key,value|-%>
<%  unless value == :undef -%>
export <%= key -%>='<%= value -%>'
<%  end -%>
<% end-%>
<%= @pre_command %>
duplicity --full-if-older-than <%= @_full_if_older_than -%> --s3-use-new-style <%= @_encryption -%> <%= @directory.map { |dir| "--include '#{dir}'" }.join " " -%> --exclude '**' / <%= @_target_url -%>
<%= @_remove_older_than_command %>

duplicity_exit_code=$?
if [ $duplicity_exit_code -ne 0 ]; then
    echo "duplicity exited with exit code: $duplicity_exit_code"
    exit 2
fi

exit 0
