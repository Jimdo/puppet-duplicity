#!/bin/bash
set -e
set -o pipefail

<% @_environment.each do |key,value|-%>
export <%= key -%>='<%= value -%>'
<% end-%>
<%= @_pre_command %>
duplicity --full-if-older-than <%= @_full_if_older_than -%> --s3-use-new-style <%= @_encryption -%> --include '<%= @directory -%>' --exclude '**' / <%= @_target_url -%>
<%= @_remove_older_than_command %>
